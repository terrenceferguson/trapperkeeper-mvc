@model List<trapperkeeper_mvc.Models.TransactionLedger>
@{
    ViewData["Title"] = "Finances";
}

<div class="text-center">
    <h1 class="display-4">Hallo, freund.</h1>
    <p>We make lots of financial decisions here, ja?</p>
    <div class="row">
        <form asp-action="CreateNewLedger" asp-controller="Finances">
            <input type="submit" />
        </form>
    </div>

    <div class="row">
        <table class="table table-striped table-inverse table-responsive">
            <thead class="thead-inverse">
                <tr>
                    <th><label asp-for="@Model.First().TransactionLedgerID"></label></th>
                    <th><label asp-for="@Model.First().Date"></label></th>
                    <th><label asp-for="@Model.First().Description"></label></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">@item.TransactionLedgerID</td>
                            <td>@item.Date</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>

</div>
